;isEmpty (x):helper: returns t if the x is blank or goal, nil otherwise
(defun isEmpty (x) 
(or (isBlank x) (isStar x)))


;isBoxes (x):helper: returns t if the x is box or boxstar, nil otherwise
(defun isBoxes (x) 
(or (isBox x) (isBoxStar x)))

;check-bound(s r c): helper, t if r c is in bound, nil otherwise

(defun check-bound (s r c)
  (and (> r -1) (> c -1) (< r (length s)) (< c (length (car s))))
)

; get-square: helper function.  takes in a State S, a row number r, and a column number c. 
; It should return the integer content of state S at square (r,c).
; If the square is outside the scope of the problem, return the value of a wall.

;passed unit test
;the idea is, check cth item from rth list from state s 

(defun get-square (s r c)
	(cond ((not (check-bound s r c)) wall);check out-of-bound, if is, return wall
				((equal r 0) (pick-row (car s) c))
				(t (get-square (cdr s) (- r 1) c))
	)
)

;set-square(s r c v) : helper function.This function should return a new state Sâ€™ that is obtained by setting
;the square (r,c) to value v
; passed the unit test
;recursive call itself until "fixing" the first (actually 0th) row
(defun set-square (s r c v)
	(cond	((not (check-bound s r c)) nil)
				((= r 0) (append (list (set-row (car s) c v)) (cdr s)))
				(t (cons (car s) (set-square (cdr s) (- r 1) c v)))
  )
)


; pick-row (l i): helper function: return ith item from a list, i start from 0
;passed
(defun pick-row (l i)
	(cond	((equal i 0) (car l))	
				(t (pick-row (cdr l) (- i 1)))
	)
) 

; set-row (l i v): helper function: return a new list where setting v as ith item of a list, i start from 0
; passed the unit test
; recursively call itself until we need to update the first item 
(defun set-row (l i v)
	(cond	((equal i 0) (cons v (cdr l)))	
				(t (cons (car l) (set-row (cdr l) (- i 1) v)))
	)
) 

