		 (set-square (set-square s r2 c2 (cond ((isStar (get-square s r2 c2)) boxstar) (t box)) ) y1 x1 (cond ((isBox (get-square s y1 x1)) blank) (t star)))
	 )
	(t nil)  
	
	)
)


